@model ChinookHTMX.Pages.Artists.CreateModal

<div id="create-artist-modal" class="modal fade" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div id="modal-body" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create New Artist</h5>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <form id="CreateForm" hx-post
                      hx-page="index"
                      hx-page-handler="ModalCreate"
                      hx-target="closest .modal-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Artist.Name" class="control-label"></label>
                        <input asp-for="Artist.Name" class="form-control"/>
                        <span asp-validation-for="Artist.Name" class="text-danger"></span>
                    </div>
                    @Html.AntiForgeryToken()
                </form>
            </div>
            <div class="modal-footer">
                <button form="CreateForm"
                        type="submit"
                        class="btn btn-primary">
                    Create
                </button>
            </div>
        </div>
    </div>
</div>
<script>
    function showModal() {
        const modal = new bootstrap.Modal('#create-artist-modal');
        modal.show();
    }
    // scopes the modal so we can keep creating them
    showModal();
</script>
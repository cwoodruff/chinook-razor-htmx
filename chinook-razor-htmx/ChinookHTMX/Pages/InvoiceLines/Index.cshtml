@page
@model ChinookHTMX.Pages.InvoiceLines.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceLine[0].UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceLine[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceLine[0].Invoice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceLine[0].Track)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.InvoiceLine) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Invoice.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Track.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

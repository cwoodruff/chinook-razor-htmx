@page
@model ChinookHTMX.Pages.InvoiceLines.CreateModel

@{
    ViewData["Title"] = "Create";
}

<!-- Main Content -->
<div id="content">
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h4 class="m-0 font-weight-bold text-primary">Create New Invoice Line</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <form method="post"
                              hx-post="@Url.Page("Create")"
                              hx-target="#form-results"
                              hx-swap="innerHTML"
                              hx-indicator="#loading-indicator">
                            
                            <div class="form-group mb-3">
                                <label asp-for="InvoiceLine.InvoiceId" class="form-label">Invoice</label>
                                <select asp-for="InvoiceLine.InvoiceId" class="form-control" asp-items="ViewBag.InvoiceId"></select>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="InvoiceLine.TrackId" class="control-label">Track</label>
                                <select asp-for="InvoiceLine.TrackId" class="form-control" asp-items="ViewBag.TrackId"></select>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="InvoiceLine.UnitPrice" class="control-label">Unit Price</label>
                                <input asp-for="InvoiceLine.UnitPrice"
                                       class="form-control"
                                       placeholder="Enter unit price..."
                                       autocomplete="off" />
                                <span asp-validation-for="InvoiceLine.UnitPrice" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="InvoiceLine.Quantity" class="control-label"></label>
                                <input asp-for="InvoiceLine.Quantity"
                                       class="form-control"
                                       placeholder="Enter quantity..."
                                       autocomplete="off" />
                                <span asp-validation-for="InvoiceLine.Quantity" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <input type="submit" value="Create" class="btn btn-primary"/>
                            </div>

                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-plus"></i>
                                    </span>
                                    <span class="text">Create Invoice Line</span>
                                </button>
                                <a asp-page="./Index" class="btn btn-secondary ms-2">
                                    <i class="fas fa-arrow-left"></i> Back to List
                                </a>
                            </div>
                        </form>

                        <!-- Loading Indicator -->
                        <div id="loading-indicator" class="htmx-indicator mt-3">
                            <div class="text-center">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="sr-only">Creating...</span>
                                </div>
                                <div class="mt-2 text-muted">Creating artist...</div>
                            </div>
                        </div>

                        <!-- Form Results -->
                        <div id="form-results" class="mt-3"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</div>
<!-- End of Main Content -->
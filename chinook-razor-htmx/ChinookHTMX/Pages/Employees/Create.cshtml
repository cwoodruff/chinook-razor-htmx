                <h4 class="m-0 font-weight-bold text-primary">Create New Employee</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <form method="post"
                              hx-post="@Url.Page("Create")"
                              hx-target="#form-results"
                              hx-swap="innerHTML"
                              hx-indicator="#loading-indicator">

                            <div class="form-group mb-3">
                                <label asp-for="Employee.LastName" class="form-label">Employee Last Name</label>

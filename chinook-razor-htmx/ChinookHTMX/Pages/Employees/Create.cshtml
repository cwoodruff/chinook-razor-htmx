                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Employee.BirthDate" class="form-label">Employee Birth Date</label>
                                <input asp-for="Employee.BirthDate" 
                                       class="form-control"
                                       placeholder="Enter employee birth date..."
                                       autocomplete="off"/>
                                <span asp-validation-for="Employee.BirthDate" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Employee.HireDate" class="form-label">Employee Hire Date</label>
                                <input asp-for="Employee.HireDate" 
                                       class="form-control"
                                       placeholder="Enter employee hire date..."
                                       autocomplete="off"/>
                                <span asp-validation-for="Employee.HireDate" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Employee.Address" class="form-label">Employee Address</label>
                                <input asp-for="Employee.Address" 
                                       class="form-control"
                                       placeholder="Enter employee address..."
                                       autocomplete="off"/>
                                <span asp-validation-for="Employee.Address" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">

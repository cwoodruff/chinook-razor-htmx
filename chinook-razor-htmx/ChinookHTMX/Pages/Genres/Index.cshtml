@page
@model ChinookHTMX.Pages.Genres.IndexModel

@{
    ViewData["Title"] = "Index";
}

<!-- Main Content -->
<div id="content">
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h4 class="m-0 font-weight-bold text-primary">Genres</h4>
            </div>
            <div class="card-body">
                <p>
                    <button hx-get="@Url.PageLink("Create")"
                            hx-target="#modal"
                            hx-swap="innerHTML"
                            class="btn btn-primary btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-flag"></i>
                        </span>
                        <span class="text">Create New Genre</span>
                    </button>
                </p>
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable">
                        <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Genre[0].Name)
                            </th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model.Genre)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button hx-get="@Url.PageLink("Edit", values: new { item.Id })"
                                                hx-target="#modal"
                                                hx-swap="innerHTML"
                                                class="btn btn-sm btn-outline-primary"
                                                title="Edit Genre">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <button hx-get="@Url.PageLink("Details", values: new { item.Id })"
                                                hx-target="#modal"
                                                hx-swap="innerHTML"
                                                class="btn btn-sm btn-outline-info"
                                                title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button hx-get="@Url.PageLink("Delete", values: new { item.Id })"
                                                hx-target="#modal"
                                                hx-swap="innerHTML"
                                                class="btn btn-sm btn-outline-danger"
                                                title="Delete Genre">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->
</div>
<!-- End of Main Content -->

<div id="modal"></div>
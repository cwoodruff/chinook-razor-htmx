@page
@model ChinookHTMX.Pages.Customers.CreateModel

@{
    ViewData["Title"] = "Create Customer";
}

<!-- Main Content -->
<div id="content">
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h4 class="m-0 font-weight-bold text-primary">Create New Customer</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <form method="post"
                              hx-post="@Url.Page("Create")"
                              hx-target="#form-results"
                              hx-swap="innerHTML"
                              hx-indicator="#loading-indicator">
                            MediaType
                            <div class="form-group mb-3">
                                <label asp-for="Customer.FirstName" class="form-label">Customer First Name</label>
                                <input asp-for="Customer.FirstName"
                                       class="form-control"
                                       placeholder="Enter customer first name..."
                                       autocomplete="off"/>
                                <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Customer.LastName" class="form-label">Customer Last Name</label>
                                <input asp-for="Customer.LastName"
                                       class="form-control"
                                       placeholder="Enter customer last name..."
                                       autocomplete="off"/>
                                <span asp-validation-for="Customer.LastName" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Customer.Company" class="form-label">Customer Company</label>
                                <input asp-for="Customer.Company"
                                       class="form-control"
                                       placeholder="Enter customer company..."
                                       autocomplete="off"/>
                                <span asp-validation-for="Customer.Company" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Customer.Address" class="form-label">Customer Address</label>
                                <input asp-for="Customer.Address"
                                       class="form-control"
                                       placeholder="Enter customer address..."
                                       autocomplete="off"/>
                                <span asp-validation-for="Customer.Address" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Customer.City" class="form-label">Customer City</label>
                                <input asp-for="Customer.City"
                                       class="form-control"
                                       placeholder="Enter customer city..."
                                       autocomplete="off"/>
                                <span asp-validation-for="Customer.City" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Customer.State" class="form-label">Customer State</label>
                                <input asp-for="Customer.State"
                                       class="form-control"
                                       placeholder="Enter customer state..."
                                       autocomplete="off"/>
                                <span asp-validation-for="Customer.State" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Customer.Country" class="form-label">Customer Country</label>
                                <input asp-for="Customer.Country"
                                       class="form-control"
                                       placeholder="Enter customer country..."
                                       autocomplete="off"/>
                                <span asp-validation-for="Customer.Country" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Customer.PostalCode" class="form-label">Customer Postal Code</label>
                                <input asp-for="Customer.PostalCode"
                                       class="form-control"
                                       placeholder="Enter customer postal code..."
                                       autocomplete="off"/>
                                <span asp-validation-for="Customer.PostalCode" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Customer.Phone" class="form-label">Customer Phone</label>
                                <input asp-for="Customer.Phone"
                                       class="form-control"
                                       placeholder="Enter customer phone..."
                                       autocomplete="off"/>
                                <span asp-validation-for="Customer.Phone" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Customer.Fax" class="form-label">Customer Fax</label>
                                <input asp-for="Customer.Fax"
                                       class="form-control"
                                       placeholder="Enter customer fax..."
                                       autocomplete="off"/>
                                <span asp-validation-for="Customer.Fax" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Customer.Email" class="form-label">Customer Email</label>
                                <input asp-for="Customer.Email"
                                       class="form-control"
                                       placeholder="Enter customer email..."
                                       autocomplete="off"/>
                                <span asp-validation-for="Customer.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label asp-for="Customer.SupportRepId" class="form-label">Customer Rep</label>
                                <select asp-for="Customer.SupportRepId"
                                        class="form-control"
                                        placeholder="Enter customer rep..."
                                        autocomplete="off"/>
                                <span asp-validation-for="Customer.SupportRepId" class="text-danger"></span>
                            </div>

                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-plus"></i>
                                    </span>
                                    <span class="text">Create Customer</span>
                                </button>
                                <a asp-page="./Index" class="btn btn-secondary ms-2">
                                    <i class="fas fa-arrow-left"></i> Back to List
                                </a>
                            </div>
                        </form>

                        <!-- Loading Indicator -->
                        <div id="loading-indicator" class="htmx-indicator mt-3">
                            <div class="text-center">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="sr-only">Creating...</span>
                                </div>
                                <div class="mt-2 text-muted">Creating customer...</div>
                            </div>
                        </div>

                        <!-- Form Results -->
                        <div id="form-results" class="mt-3"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</div>
<!-- End of Main Content -->
@page
@model ChinookHTMX.Pages.Tracks.CreateModel

@{
    ViewData["Title"] = "Create";
}

<!-- Main Content -->
<div id="content">
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h4 class="m-0 font-weight-bold text-primary">Create New Track</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <form method="post"
                              hx-post="@Url.Page("Create")"
                              hx-target="#form-results"
                              hx-swap="innerHTML"
                              hx-indicator="#loading-indicator">

                            <div class="form-group">
                                <label asp-for="Track.Name" class="form-label">Track Name</label>
                                <input asp-for="Track.Name"
                                       class="form-control"
                                       placeholder="Enter track name..."
                                       autocomplete="off"/>
                                <span asp-validation-for="Track.Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Track.AlbumId" class="form-label">Album</label>
                                <select asp-for="Track.AlbumId" class="form-control"
                                        asp-items="ViewBag.AlbumId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="Track.MediaTypeId" class="form-label">Media Type</label>
                                <select asp-for="Track.MediaTypeId" class="form-control"
                                        asp-items="ViewBag.MediaTypeId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="Track.GenreId" class="form-label">Genre</label>
                                <select asp-for="Track.GenreId" class="form-control"
                                        asp-items="ViewBag.GenreId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="Track.Composer" class="form-label">Composer</label>
                                <input asp-for="Track.Composer"
                                       class="form-control"
                                       placeholder="Enter composer..."
                                       autocomplete="off"/>
                                <span asp-validation-for="Track.Composer" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Track.Milliseconds" class="form-label">Milliseconds</label>
                                <input asp-for="Track.Milliseconds"
                                       class="form-control"
                                       placeholder="Enter milliseconds..."
                                       autocomplete="off"/>
                                <span asp-validation-for="Track.Milliseconds" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Track.Bytes" class="form-label">Bytes</label>
                                <input asp-for="Track.Bytes"
                                       class="form-control"
                                       placeholder="Enter bytes..."
                                       autocomplete="off"/>
                                <span asp-validation-for="Track.Bytes" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Track.UnitPrice" class="form-label">Unit Price</label>
                                <input asp-for="Track.UnitPrice"
                                       class="form-control"
                                       placeholder="Enter unit price..."
                                       autocomplete="off"/>
                                <span asp-validation-for="Track.UnitPrice" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary"/>
                            </div>

                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-plus"></i>
                                    </span>
                                    <span class="text">Create Track</span>
                                </button>
                                <a asp-page="./Index" class="btn btn-secondary ms-2">
                                    <i class="fas fa-arrow-left"></i> Back to List
                                </a>
                            </div>
                        </form>

                        <!-- Loading Indicator -->
                        <div id="loading-indicator" class="htmx-indicator mt-3">
                            <div class="text-center">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="sr-only">Creating...</span>
                                </div>
                                <div class="mt-2 text-muted">Creating track...</div>
                            </div>
                        </div>

                        <!-- Form Results -->
                        <div id="form-results" class="mt-3"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</div>
<!-- End of Main Content -->
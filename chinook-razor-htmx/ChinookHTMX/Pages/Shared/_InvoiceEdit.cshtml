@model ChinookHTMX.Entities.Invoice
@{
    var id = $"invoice-{Model.Id}";
}

<tr id="@id">
    <td>
        <input class="input" type="date" asp-for="InvoiceDate"/>
    </td>
    <td>
        <input class="input" type="text" asp-for="BillingAddress"/>
    </td>
    <td>
        <input class="input" type="text" asp-for="BillingCity"/>
    </td>
    <td>
        <input class="input" type="text" asp-for="BillingState"/>
    </td>
    <td>
        <input class="input" type="text" asp-for="BillingCountry"/>
    </td>
    <td>
        <input class="input" type="text" asp-for="BillingPostalCode"/>
    </td>
    <td>
        @Model.Total.ToString("C")
    </td>
    <td>
        @Model.Customer.LastName
    </td>
    <td class="has-text-right">
        <button class="btn btn-success btn-icon-split"
                hx-post="@Url.Page("Index", "Update", new {Model.Id})"
                hx-swap="outerHTML"
                hx-target="closest tr"
                hx-include="#@id input">
            <span class="icon text-white-50">
                <i class="fas fa-check"></i>
            </span>
            <span class="text">Save</span>
        </button>
        <button class="btn btn-warning btn-icon-split"
                hx-get="@Url.Page("Index", "Row", new {Model.Id})"
                hx-swap="outerHTML"
                hx-target="closest tr">
            <span class="icon text-white-50">
                <i class="fas fa-exclamation-triangle"></i>
            </span>
            <span class="text">Cancel</span>
        </button>
        @Html.AntiForgeryToken()
    </td>
</tr>
@model ChinookHTMX.Pages.Invoices.DeleteModel

<div id="delete-invoice-modal" class="modal fade" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Confirm Deletion
                </h5>
                <button type="button" class="btn-close btn-close-white"
                        data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-warning">
                    <strong>Warning!</strong> This action cannot be undone.
                </div>

                <p class="mb-3">Are you sure you want to delete this invoice?</p>

                <!-- Entity Details -->
                <div class="card bg-light border-left-danger">
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-3">Invoice ID:</dt>
                            <dd class="col-sm-9">
                                <strong>#@Html.DisplayFor(model => model.Invoice.Id)</strong>
                            </dd>
                            <dt class="col-sm-3">Invoice Date:</dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Invoice.InvoiceDate)
                            </dd>
                            @if (Model.Invoice.Customer != null)
                            {
                                <dt class="col-sm-3">Customer:</dt>
                                <dd class="col-sm-9">
                                    @Html.DisplayFor(model => model.Invoice.Customer.FirstName) @Html.DisplayFor(model => model.Invoice.Customer.LastName)
                                </dd>
                            }
                            <dt class="col-sm-3">Total:</dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Invoice.Total)
                            </dd>
                        </dl>
                    </div>
                </div>

                <!-- Results Container -->
                <div id="delete-results" class="mt-3"></div>
            </div>
            <div class="modal-footer">
                <form method="post"
                      hx-post="@Url.Page("Delete", values: new { Model.Invoice.Id })"
                      hx-target="#delete-results"
                      hx-swap="innerHTML"
                      hx-indicator="#delete-loading"
                      hx-on::after-request="if(event.detail.successful) {
                          setTimeout(() => {
                              bootstrap.Modal.getInstance(document.getElementById('delete-invoice-modal')).hide();
                              htmx.trigger('body', 'refreshTable');
                          }, 1500);
                      }">

                    <input type="hidden" asp-for="Invoice.Id"/>
                    @Html.AntiForgeryToken()

                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times"></i> Cancel
                    </button>
                    <button type="submit" class="btn btn-danger">
                        <span id="delete-loading" class="htmx-indicator">
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        </span>
                        <i class="fas fa-trash"></i> Delete Invoice
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function showModal() {
        const modal = new bootstrap.Modal('#delete-invoice-modal');
        modal.show();
    }
    // scopes the modal so we can keep creating them
    showModal();
</script>
@page
@model ChinookHTMX.Pages.Invoices.CreateModel

@{
    ViewData["Title"] = "Create";
}

<!-- Main Content -->
<div id="content">
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h4 class="m-0 font-weight-bold text-primary">Create New Invoice</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <form method="post"
                              hx-post="@Url.Page("Create")"
                              hx-target="#form-results"
                              hx-swap="innerHTML"
                              hx-indicator="#loading-indicator">

                            <div class="form-group">
                                <label asp-for="Invoice.CustomerId" class="form-label">Customer</label>
                                <select asp-for="Invoice.CustomerId" class="form-control"
                                        asp-items="ViewBag.CustomerId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="Invoice.InvoiceDate" class="form-label">Invoice Date</label>
                                <input asp-for="Invoice.InvoiceDate"
                                       class="form-control"
                                       placeholder="Enter date..."
                                       autocomplete="off"/>
                                <span asp-validation-for="Invoice.InvoiceDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Invoice.BillingAddress" class="form-label">Billing Address</label>
                                <input asp-for="Invoice.BillingAddress"
                                       class="form-control"
                                       placeholder="Enter address..."
                                       autocomplete="off"/>
                                <span asp-validation-for="Invoice.BillingAddress" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Invoice.BillingCity" class="form-label">Billing City</label>
                                <input asp-for="Invoice.BillingCity"
                                       class="form-control"
                                       placeholder="Enter city..."
                                       autocomplete="off"/>
                                <span asp-validation-for="Invoice.BillingCity" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Invoice.BillingState" class="form-label">Billing State</label>
                                <input asp-for="Invoice.BillingState"
                                       class="form-control"
                                       placeholder="Enter state..."
                                       autocomplete="off"/>
                                <span asp-validation-for="Invoice.BillingState" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Invoice.BillingCountry" class="form-label">Billing Countrye</label>
                                <input asp-for="Invoice.BillingCountry"
                                       class="form-control"
                                       placeholder="Enter country..."
                                       autocomplete="off"/>
                                <span asp-validation-for="Invoice.BillingCountry" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Invoice.BillingPostalCode" class="form-label">Billing Postal Code</label>
                                <input asp-for="Invoice.BillingPostalCode"
                                       class="form-control"
                                       placeholder="Enter postal codee..."
                                       autocomplete="off"/>
                                <span asp-validation-for="Invoice.BillingPostalCode" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Invoice.Total" class="form-label">Total Amount</label>
                                <input asp-for="Invoice.Total"
                                       class="form-control"
                                       placeholder="Enter total amount..."
                                       autocomplete="off"/>
                                <span asp-validation-for="Invoice.Total" class="text-danger"></span>
                            </div>

                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-icon-split">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-plus"></i>
                                    </span>
                                    <span class="text">Create Invoice</span>
                                </button>
                                <a asp-page="./Index" class="btn btn-secondary ms-2">
                                    <i class="fas fa-arrow-left"></i> Back to List
                                </a>
                            </div>
                        </form>

                        <!-- Loading Indicator -->
                        <div id="loading-indicator" class="htmx-indicator mt-3">
                            <div class="text-center">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="sr-only">Creating...</span>
                                </div>
                                <div class="mt-2 text-muted">Creating artist...</div>
                            </div>
                        </div>

                        <!-- Form Results -->
                        <div id="form-results" class="mt-3"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</div>
<!-- End of Main Content -->
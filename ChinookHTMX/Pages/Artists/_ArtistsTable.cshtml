@model ChinookHTMX.Pages.Artists.IndexModel

<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover" id="dataTable">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Artist[0].Name)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Artist)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <button hx-get="@Url.PageLink("Edit", values: new { item.Id })"
                                hx-target="#modal"
                                hx-swap="innerHTML"
                                class="btn btn-sm btn-outline-primary"
                                title="Edit Artist">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button hx-get="@Url.PageLink("Details", values: new { item.Id })"
                                hx-target="#modal"
                                hx-swap="innerHTML"
                                class="btn btn-sm btn-outline-info"
                                title="View Details">
                            <i class="fas fa-eye"></i>
                        </button>
                        <button hx-get="@Url.PageLink("Delete", values: new { item.Id })"
                                hx-target="#modal"
                                hx-swap="innerHTML"
                                class="btn btn-sm btn-outline-danger"
                                title="Delete Artist">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

@if (Model.Artist.Any())
{
    <div class="row mt-3">
        <div class="col-sm-12 col-md-6">
            <div class="text-muted small">
                Showing @Model.Artist.Count album@(Model.Artist.Count != 1 ? "s" : "")
                @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
                {
                    @: matching "@Model.SearchTerm"
                }
            </div>
        </div>
    </div>
}
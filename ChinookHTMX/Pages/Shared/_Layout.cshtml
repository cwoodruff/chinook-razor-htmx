<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewData["Title"] - ChinookHTMX</title>
    <link rel="stylesheet" href="css/sb-admin-2.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/lib/simple-sidebar/css/styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/lib/datatables/dist/css/dataTables.bootstrap4.min.css" asp-append-version="true"/>
    
    <title>Chinook HTMX</title>

    <!-- Custom fonts for this template-->
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">
</head>
<body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper">
    <partial name="_NavBar"/>
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
            <partial name="_TopBar"/>
            <!-- Main Content Area for HTMX Loading -->
            <div id="main-content" hx-history="false">
                @RenderBody()
            </div>
            <partial name="_Footer"/>
        </div>
        <!-- End of Content Wrapper -->
    </div>
    <!-- End of Page Wrapper -->
</div>

<!-- Modal Container -->
<div id="modal"></div>

<!-- Loading Indicator -->
<div id="loading-indicator" class="position-fixed" style="top: 50%; left: 50%; transform: translate(-50%, -50%); z-index: 9999; display: none;">
    <div class="text-center">
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only">Loading...</span>
        </div>
        <div class="mt-2 text-muted">Loading...</div>
    </div>
</div>

<!-- Custom scripts for all pages-->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="js/sb-admin-2.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/simple-sidebar/js/scripts.js" asp-append-version="true"></script>
<script src="https://unpkg.com/htmx.org@2.0.4"></script>
<script src="~/lib/jquery-easing/jquery.easing.min.js"></script>
<script src="~/lib/datatables/dist/js/jquery.dataTables.min.js"></script>
<script src="~/lib/datatables/dist/js/dataTables.bootstrap4.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>

@await RenderSectionAsync("Scripts", required: false)

<script>
    // HTMX Configuration and Loading Indicators
    document.addEventListener('htmx:beforeRequest', function(event) {
        // Show loading indicator for navigation requests
        if (event.detail.target.id === 'main-content') {
            document.getElementById('loading-indicator').style.display = 'block';
        }
    });

    document.addEventListener('htmx:afterRequest', function(event) {
        // Hide loading indicator
        document.getElementById('loading-indicator').style.display = 'none';

        // Update active navigation state
        if (event.detail.target.id === 'main-content') {
            updateActiveNavigation(event.detail.xhr.responseURL);
        }
    });

    function updateActiveNavigation(url) {
        // Remove active class from all nav items
        document.querySelectorAll('.nav-item').forEach(item => item.classList.remove('active'));

        // Add active class based on current URL
        const navLinks = document.querySelectorAll('.nav-link[href]');
        navLinks.forEach(link => {
            if (url.includes(link.getAttribute('href'))) {
                link.closest('.nav-item').classList.add('active');
            }
        });
    }

    // Handle browser back/forward buttons
    window.addEventListener('popstate', function(event) {
        if (event.state && event.state.htmx) {
            htmx.ajax('GET', window.location.pathname, '#main-content');
        }
    });
</script>

</body>
</html>